{
  "ServiceName": "basic_platform",
  "Zipkin": {
    "Endpoint": "http://localhost:9411/api/v2/spans"
  },
  "EnableAuditLog": false,
  "ConnectionStrings": {
    "Default": "sqlite,Data Source=test_local.db;",
    "LoggerCenter": "sqlite,Data Source=test_local_log.db;",
    "CAP": "127.0.0.1,connectTimeout=30000,keepAlive=60,syncTimeout=5000"
  },
  "RedisConfig": {
    "DefaultDatabase": 2,
    "InstanceName": "basic_platform:",
    "Configuration": "127.0.0.1,connectTimeout=30000,keepAlive=60,syncTimeout=5000"
  },
  "JwtBearer": {
    "Audience": "BasicPlatform.WebAPI",
    "Issuer": "sso.center",
    "SecurityKey": "2ac51d0f-4e68-4a10-8326-6f17932131dc",
    "Expires": 86400
  },
  "CorsOrigins": "http://localhost:5079,http://localhost:5173",
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Grafana.Loki"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Athena.InstantMessaging.SignalR": "Verbose",
        "Microsoft.AspNetCore": "Information",
        "System": "Information",
        "DotNetCore.CAP": "Warning"
      }
    },
    "Enrich": [
      "WithThreadId",
      "WithThreadName",
      "WithMachineName",
      "WithClientIp",
      "WithClientAgent",
      "WithClientPhysicalAddress",
      "WithOpenTracingContext"
    ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss} [{Level:u3}] [{ThreadId}] {Message}{NewLine}{Exception}"
        }
      },
      {
        "Name": "GrafanaLoki",
        "Args": {
          "uri": "http://120.25.204.1:3100",
          "labels": [
            {
              "key": "app",
              "value": "web_app"
            },
            {
              "key": "environment",
              "value": "dev"
            },
            {
              "key": "service_name",
              "value": "basic_platform"
            }
          ],
          "propertiesAsLabels": [
            "app"
          ]
        }
      }
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
