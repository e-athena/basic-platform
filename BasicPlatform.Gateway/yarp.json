{
  "ReverseProxy": {
    "Routes": {
      "Zipkin": {
        "ClusterId": "zipkin",
        "Match": {
          "Path": "/zipkin/{**everything}"
        },
        "Transforms": [
          {
            "RequestHeadersCopy": "true"
          },
          {
            "RequestHeaderOriginalHost": "true"
          }
        ]
      },
      "WebAPI": {
        "ClusterId": "webApiCluster",
        "Match": {
          "Path": "/basic_api/{**everything}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/basic_api"
          },
          {
            "RequestHeadersCopy": "true"
          },
          {
            "RequestHeaderOriginalHost": "true"
          }
        ]
      }
    },
    "Clusters": {
      "zipkin": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:9411"
          }
        }
      },
      "webApiCluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5078"
          },
          "destination2": {
            "Address": "http://localhost:7722"
          }
        },
        "HealthCheck": {
          //          "Active": {
          //            "Enabled": "true",
          //            "Interval": "00:00:10",
          //            "Timeout": "00:00:10",
          //            "Policy": "ConsecutiveFailures",
          //            "Path": "/health"
          //          },
          "Passive": {
            "Enabled": true,
            "Policy": "TransportFailureRate",
            "ReactivationPeriod": "00:00:10"
          }
        },
        "MetaData": {
          "TransportFailureRateHealthPolicy.RateLimit": "0.5",
          "ConsecutiveFailuresHealthPolicy.Threshold": "3"
        }
      }
    }
  }
}
